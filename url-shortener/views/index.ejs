<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>URL Shortener</title>

   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>

<body>
   <div class="container">
      <h1>URL Shortener</h1>
      <form action="/shortURLs" method="POST" class="my-5 form-inline">
         <label for="url" class="visually-hidden">URL:</label>
         <input type="url" name="url" id="url" class="form-control my-3" placeholder="URL" required>
         <button type="submit" class="btn btn-success">Create Short URL</button>
      </form>

      <table class="table table-striped table-responsive">
         <thead>
            <tr>
               <th>URL</th>
               <th>Short URL</th>
               <th>No. of Clicks</th>
            </tr>
         </thead>
         <tbody>
            <% shortURLs.forEach(shortURL=> { %>
               <tr>
                  <td><a href="<%= shortURL.url %>"><%= shortURL.url %></a></td>
                  <td><a href="<%= shortURL.shortURL %>"><%= shortURL.shortURL %></a></td>
                  <td><%= shortURL.clicks %></td>
               </tr>
            <% }) %>
         </tbody>
      </table>
   </div>
</body>

</html>